<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/historylistview_entry_layout_showlayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <ImageView
        android:id="@+id/historylistview_entry_ib_sliding_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#00000000"
        android:src="@drawable/ic_qrcode" />

    <TextView
        android:id="@+id/historylistview_entry_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/historylistview_entry_ib_sliding_left"
        android:text="xxxxxxxxxxxxxxxxx" />

    <ImageView
        android:id="@+id/historylistview_entry_ib_sliding_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:src="@drawable/ic_arrow" />
</RelativeLayout>