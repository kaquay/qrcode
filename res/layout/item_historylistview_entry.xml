<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/historylistview_entry_drawer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/historylistview_entryitem_background" >

    <!-- The layout background -->

    <RelativeLayout
        android:id="@+id/historylistview_entry_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/historylistview_entry_back_ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/historylistview_entry_tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/historylistview_entry_ib_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/ic_btn_sms_fc" />

            <ImageButton
                android:id="@+id/historylistview_entry_ib_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/ic_btn_mail_fc" />

            <ImageButton
                android:id="@+id/historylistview_entry_ib_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/ic_btn_twitter_fc" />

            <ImageButton
                android:id="@+id/historylistview_entry_ib_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/ic_btn_fb_fc" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/historylistview_entry_ib_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:src="@drawable/ic_btn_delete_fc" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/historylistview_entry_front"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" >

        <ImageView
            android:id="@+id/historylistview_entry_iv_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_qrcode"
            android:layout_marginLeft="3sp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow"
            android:layout_weight="1"
            android:layout_marginRight="3sp" />

        <TextView
            android:id="@+id/historylistview_entry_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/historylistview_entry_iv_qrcode"
            android:text="zzzz" />
    </RelativeLayout>

</FrameLayout>