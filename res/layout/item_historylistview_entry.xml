<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/historylistview_entry_drawer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/historylistview_entryitem_background" >

    <!-- The layout background -->

    <RelativeLayout
        android:id="@+id/historylistview_entry_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionbarcolor" >

        <LinearLayout
            android:id="@+id/historylistview_entry_back_ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/historylistview_entry_tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/historylistview_entry_ib_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/ic_btn_sms" />

            <ImageButton
                android:id="@+id/historylistview_entry_ib_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/ic_btn_mail" />

            <ImageButton
                android:id="@+id/historylistview_entry_ib_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/ic_btn_twitter" />

            <ImageButton
                android:id="@+id/historylistview_entry_ib_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/ic_btn_fb" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/historylistview_entry_ib_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:src="@drawable/ic_btn_delete" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/historylistview_entry_front"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/historylistview_style" >

        <ImageView
            android:id="@+id/historylistview_entry_iv_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_qrcode" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_arrow"
             />

        <TextView
            android:id="@+id/historylistview_entry_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/historylistview_entry_iv_qrcode"
            android:text="zzzz"
            android:layout_marginLeft="8dp"
            android:textSize="15dp"
            android:textColor="#000000" />
    </RelativeLayout>

</FrameLayout>