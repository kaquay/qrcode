<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/settinglistview_entry_layout_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/borderlayout" >

        <TextView
            android:id="@+id/settinglistview_entry_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3sp"
            android:text="zzzzzzz"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Switch
            android:id="@+id/settinglistview_entry_sw_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:shadowColor="@android:color/white"
            android:switchTextAppearance="@style/switchTextAppearance"
            android:thumb="@color/actionbarcolor" />
    </RelativeLayout>

</FrameLayout>