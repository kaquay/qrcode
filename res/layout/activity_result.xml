<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/result_rl_actionbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/actionbarcolor" >
        <ImageButton
            android:id="@+id/result_ib_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:src="@drawable/ic_history" />

        <Button
            android:id="@+id/result_bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_btn_back"
            android:text="Back" />

        <TextView
            android:id="@+id/result_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3sp"
            android:layout_marginRight="3sp"
            android:layout_toLeftOf="@+id/result_ib_share"
            android:layout_toRightOf="@+id/result_bt_back"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <WebView
        android:id="@+id/result_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>